<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:minHeight="@dimen/design_fab_size_normal"
        android:textSize="20sp"
        tools:text="eg" />


    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_fab_size_normal"
        android:layout_margin="5dp"
        android:hint="请输入要显示的信息" />

    <Button
        android:id="@+id/btn_showText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/toast_stroke_gray"
        android:text="修改文字" />

    <Button
        android:id="@+id/btn_changeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/toast_stroke_gray"
        android:text="修改标题" />


</LinearLayout>