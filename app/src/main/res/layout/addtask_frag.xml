<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/add_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:minHeight="@dimen/design_fab_size_normal"
            android:textSize="20sp"
            tools:text="eg" />


        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="请输入要显示的信息"
            android:minHeight="@dimen/design_fab_size_normal" />

        <Button
            android:id="@+id/btn_showText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/toast_stroke_gray"
            android:text="修改文字" />

        <Button
            android:id="@+id/btn_changeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/toast_stroke_gray"
            android:text="修改标题" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/toast_stroke_gray"
            android:text="登陆" />

        <Button
            android:id="@+id/btn_getAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/toast_stroke_gray"
            android:text="获取广告" />

        <Button
            android:id="@+id/btn_upFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/toast_stroke_gray"
            android:text="上次图片" />

        <ImageView
            android:id="@+id/iv_showPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="center" />

    </LinearLayout>

</ScrollView>