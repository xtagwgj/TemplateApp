<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="90" android:endColor="@color/button_deep_color" android:startColor="@color/button_deep_color" />
            <stroke android:width="0dp" android:color="@color/button_deep_color" />
            <!--<corners android:radius="5dp" />-->
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="@color/button_deep_color" android:startColor="@color/button_deep_color" />
            <stroke android:width="0dp" android:color="@color/button_deep_color" />
            <!--<corners android:radius="20dp" />-->
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="@color/button_color" android:startColor="@color/button_color" />
            <stroke android:width="0dp" android:color="@color/button_color" />
            <!--<corners android:radius="20dp" />-->
        </shape>
    </item>
</selector>